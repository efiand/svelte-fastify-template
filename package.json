{
	"name": "pineglade-app",
	"main": "src/server/main.js",
	"type": "module",
	"scripts": {
		"build": "del-cli \"public/*.bundle.*\" \".app/*.{js,log,txt}\" && webpack --config-name client && webpack --config-name ssr && webpack --config-name server && del-cli \".app/*{bundle,layout}.js\"",
		"format": "prettier --write .",
		"lint:editorconfig": "editorconfig-cli",
		"lint:markdownlint": "markdownlint-cli2 \"**/*.md\" \"#node_modules\"",
		"lint:eslint": "eslint \"*.{cjs,js}\" \"src/{common,routes,server}/**/*.js\"",
		"lint": "pnpm format && concurrently -n lint: -r -s \"all\" pnpm:lint:*",
		"dev:editorconfig": "onchange \".*\" \"*.{js,json,md}\" \"src/**/*.{css,html,js,json,md,svelte,svg,yml}\" -- pnpm lint:editorconfig",
		"dev:markdownlint": "onchange \"**/*.md\" -- pnpm lint:markdownlint",
		"dev:eslint": "onchange \"*.{cjs,js}\" \"src/{common,routes,server}/**/*.js\" -- pnpm lint:eslint",
		"dev:ssr": "onchange \"src/**/*.{svelte,html}\" \"src/lib/**/*.js\" \"src/main.js\" -- webpack --config-name ssr",
		"dev:client": "webpack serve --config-name client --mode=development",
		"dev:server": "nodemon",
		"dev": "pnpm lint & webpack --config-name ssr && cross-env NODE_ENV=development concurrently -n dev: -r pnpm:dev:*"
	},
	"devDependencies": {
		"@babel/core": "7.18.13",
		"@babel/eslint-parser": "7.18.9",
		"@babel/preset-env": "7.18.10",
		"@fastify/static": "6.5.0",
		"@htmlacademy/editorconfig-cli": "1.0.0",
		"@squoosh/lib": "0.4.0",
		"autoprefixer": "10.4.8",
		"concurrently": "7.3.0",
		"copy-webpack-plugin": "11.0.0",
		"cross-env": "7.0.3",
		"css-loader": "6.7.1",
		"css-minimizer-webpack-plugin": "4.0.0",
		"css-mqpacker-webpack-plugin": "0.12.3",
		"del-cli": "5.0.0",
		"eslint": "8.22.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-markdown": "3.0.0",
		"eslint-plugin-svelte3": "4.0.0",
		"eslint-webpack-plugin": "3.2.0",
		"fastify": "4.5.3",
		"glob": "8.0.3",
		"htmlnano": "2.0.2",
		"http-status-codes": "2.2.0",
		"image-minimizer-webpack-plugin": "3.3.0",
		"imagemin": "8.0.1",
		"imagemin-svgo": "10.0.1",
		"markdownlint-cli2": "0.5.1",
		"mini-css-extract-plugin": "2.6.1",
		"nodemon": "2.0.19",
		"onchange": "7.1.0",
		"postcss": "8.4.16",
		"postcss-calc": "8.2.4",
		"postcss-html": "1.5.0",
		"postcss-load-config": "4.0.1",
		"postcss-loader": "7.0.1",
		"postcss-nested": "5.0.6",
		"postcss-simple-vars": "6.0.3",
		"pre-commit": "1.2.2",
		"prettier": "2.7.1",
		"prettier-plugin-svelte": "2.7.0",
		"schema-utils": "4.0.0",
		"stylelint": "14.11.0",
		"stylelint-config-html": "1.1.0",
		"stylelint-config-prettier": "9.0.3",
		"stylelint-order": "5.0.0",
		"stylelint-webpack-plugin": "3.3.0",
		"svelte": "3.49.0",
		"svelte-loader": "3.1.3",
		"svelte-preprocess": "4.10.7",
		"svelte-routing": "1.6.0",
		"svgo": "2.8.0",
		"terser-webpack-plugin": "5.3.5",
		"typescript": "4.8.2",
		"webpack": "5.74.0",
		"webpack-cli": "4.10.0",
		"webpack-dev-server": "4.10.0"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env"
			]
		]
	},
	"browserslist": [
		"last 6 version",
		"not dead",
		"not IE 11"
	],
	"nodemonConfig": {
		"watch": [
			"src/server",
			"src/common",
			"src/routes"
		],
		"ext": "html js"
	},
	"editorconfig-cli": [
		".*",
		"*.{cjs,js,json,md}",
		"src/**/*.{css,html,js,json,md,svelte,svg}"
	],
	"pre-commit": "lint"
}
